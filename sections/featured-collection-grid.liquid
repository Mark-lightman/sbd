
{% liquid
  assign max_items = section.settings.max_products
  assign section_collection = section.settings.collection
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  data-testid="featured-collection-grid"
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    featured-collection-grid
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
    --featured-collection-subheading-color: {{ section.settings.subheading_color }};
  "
>
  <div class="featured-collection-grid__header section-resource-list__header">
    {%- content_for 'block', type: '_product-list-content', id: 'static-header', closest.collection: section_collection -%}
  </div>

  {% capture list_items %}
    {% if section_collection != blank and shop.products_count != 0 %}
      {% paginate section_collection.products by max_items %}
        {% for product in section_collection.products limit: max_items %}
          <div class="resource-list__item">
            {% # theme-check-disable UniqueStaticBlockId %}
            {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: product %}
            {% # theme-check-enable UniqueStaticBlockId %}
          </div>
          {% unless forloop.last %}
            <!--@list/split-->
          {% endunless %}
        {% endfor %}
      {% endpaginate %}
    {% else %}
      {% for i in (1..max_items) %}
        <div class="resource-list__item">
          {% # theme-check-disable UniqueStaticBlockId %}
          {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: null %}
          {% # theme-check-enable UniqueStaticBlockId %}
        </div>
        {% unless forloop.last %}
          <!--@list/split-->
        {% endunless %}
      {% endfor %}
    {% endif %}
  {% endcapture %}

  {% liquid
    assign list_items_array = list_items | strip | split: '<!--@list/split-->'
  %}
  {% render 'resource-list',
    list_items: list_items,
    list_items_array: list_items_array,
    settings: section.settings,
    slide_count: max_items,
    content_type: 'products',
    test_id: 'featured-collection-grid'
  %}

  <div
    class="section-resource-list__content"
    style="--horizontal-alignment: {{ section.settings.horizontal_alignment }};"
  >
    {%- content_for 'blocks' -%}
  </div>
</div>

{% stylesheet %}
  .featured-collection-grid .featured-collection-grid__header {
    width: 100%;
    margin-bottom: var(--gap-lg, 24px);
  }

  .featured-collection-grid .featured-collection-grid__header .group-block-content {
    flex-direction: column;
    align-items: center;
    text-align: center;
    width: 100%;
  }

  .featured-collection-grid .featured-collection-grid__header .text-block {
    text-align: center;
  }

  .featured-collection-grid .featured-collection-grid__header .text-block--align-left {
    text-align: center;
  }

  .featured-collection-grid .featured-collection-grid__header .group-block-content > *:first-child,
  .featured-collection-grid .featured-collection-grid__header .group-block-content > *:first-child * {
    color: var(--featured-collection-subheading-color, #B6925B);
  }

  .featured-collection-grid .resource-list--grid {
    display: grid;
    gap: var(--resource-list-row-gap) var(--resource-list-column-gap);
  }

  .featured-collection-grid .product-card__content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 8px 12px;
    align-items: start;
  }

  .featured-collection-grid .product-card__content > *:nth-child(1),
  .featured-collection-grid .product-card__content > *:nth-child(2),
  .featured-collection-grid .product-card__content > *:nth-child(3) {
    grid-column: 1 / -1;
  }

  .featured-collection-grid .product-card__content > *:nth-child(4) {
    grid-column: 1;
    min-width: 0;
    align-self: center;
  }

  .featured-collection-grid .product-card__content .featured-collection-grid__card-arrow {
    grid-column: 2;
    grid-row: 4;
    align-self: center;
    margin-top: 0;
  }

  .featured-collection-grid__card-arrow {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    border: 1px solid #E7E8EC;
    background: transparent;
    color: #C8A873;
    font-size: 1.75rem;
    line-height: 1;
    box-sizing: border-box;
    transition: background 0.25s ease, color 0.25s ease, border-color 0.25s ease;
    --icon-stroke-width: 1.5px;
  }

  .featured-collection-grid__card-arrow .featured-collection-grid__card-arrow-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  .featured-collection-grid .product-card:hover .featured-collection-grid__card-arrow {
    background: #C8A873;
    color: #fff;
    border-color: #C8A873;
  }

  .featured-collection-grid .product-card-description__text {
    display: block;
    font-size: 0.75rem;
    line-height: 1.4;
  }

  .featured-collection-grid .product-card .card-gallery {
    overflow: hidden;
    transition: transform 0.35s ease;
  }

  .featured-collection-grid .product-card .card-gallery img,
  .featured-collection-grid .product-card .card-gallery .image-block__image {
    transition: transform 0.35s ease;
  }

  .featured-collection-grid .product-card:hover .card-gallery img,
  .featured-collection-grid .product-card:hover .card-gallery .image-block__image {
    transform: scale(1.05);
  }

  .featured-collection-grid .product-card .product-card__content > *:nth-child(3),
  .featured-collection-grid .product-card .product-card__content > *:nth-child(3) a,
  .featured-collection-grid .product-card .product-card__content > *:nth-child(3) .text-block,
  .featured-collection-grid .product-card .product-card__content > *:nth-child(3) p {
    transition: color 0.25s ease;
  }

  .featured-collection-grid .product-card:hover .product-card__content > *:nth-child(3),
  .featured-collection-grid .product-card:hover .product-card__content > *:nth-child(3) a,
  .featured-collection-grid .product-card:hover .product-card__content > *:nth-child(3) .text-block,
  .featured-collection-grid .product-card:hover .product-card__content > *:nth-child(3) p,
  .featured-collection-grid .product-card:hover .product-card__content > *:nth-child(3) h1,
  .featured-collection-grid .product-card:hover .product-card__content > *:nth-child(3) h2,
  .featured-collection-grid .product-card:hover .product-card__content > *:nth-child(3) h3,
  .featured-collection-grid .product-card:hover .product-card__content > *:nth-child(3) h4 {
    color: #C8A873 !important;
  }
{% endstylesheet %}

