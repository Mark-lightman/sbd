<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--full-width process-steps color-{{ section.settings.color_scheme }}"
  data-testid="process-steps"
  style="
    --process-steps-subheading-color: {{ section.settings.subheading_color }};
  "
>
  <div class="process-steps__inner">
    <div class="process-steps__header">
      <div class="process-steps__header-content">
        {%- content_for 'block', type: '_product-list-content', id: 'static-header' -%}
      </div>
    </div>

    <div class="process-steps__grid">
      {% for i in (1..6) %}
        {% assign title_key = 'step_' | append: i | append: '_title' %}
        {% assign desc_key = 'step_' | append: i | append: '_description' %}
        {% assign icon_key = 'step_' | append: i | append: '_icon' %}
        {% assign title = section.settings[title_key] %}
        {% assign description = section.settings[desc_key] %}
        {% assign icon_type = section.settings[icon_key] | default: 'chat' %}
        {% assign card_number = i | prepend: '0' | slice: -2, 2 %}
        <div class="process-steps__card group">
            <span class="process-steps__card-number">{{ card_number }}</span>
            <div class="process-steps__card-icon">
              {% case icon_type %}
                {% when 'chat' %}
                  <span class="process-steps__card-icon-symbol process-steps__card-icon-svg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M2 22V4q0-.825.588-1.412T4 2h16q.825 0 1.413.588T22 4v12q0 .825-.587 1.413T20 18H6zm3.15-6H20V4H4v13.125zM4 16V4z"/></svg>
                  </span>
                {% when 'design' %}
                  <span class="process-steps__card-icon-symbol process-steps__card-icon-svg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="m6.75 21l-.25-2.2l2.85-7.85q.375.35.813.588t.937.362l-2.75 7.55zm10.5 0l-1.6-1.55l-2.75-7.55q.5-.125.938-.363t.812-.587l2.85 7.85zM12 11q-1.25 0-2.125-.875T9 8q0-.975.563-1.737T11 5.2V3h2v2.2q.875.3 1.438 1.063T15 8q0 1.25-.875 2.125T12 11m0-2q.425 0 .713-.288T13 8t-.288-.712T12 7t-.712.288T11 8t.288.713T12 9"/></svg>
                  </span>
                {% when 'survey' %}
                  <span class="process-steps__card-icon-symbol process-steps__card-icon-svg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M21 6H3c-1.1 0-2 .9-2 2v8c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2m0 10H3V8h2v4h2V8h2v4h2V8h2v4h2V8h2v4h2V8h2z"/></svg>
                  </span>
                {% when 'confirmation' %}
                  <span class="process-steps__card-icon-symbol process-steps__card-icon-svg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M6 22q-1.25 0-2.125-.875T3 19v-3h3V2l1.5 1.5L9 2l1.5 1.5L12 2l1.5 1.5L15 2l1.5 1.5L18 2l1.5 1.5L21 2v17q0 1.25-.875 2.125T18 22zm12-2q.425 0 .713-.288T19 19V5H8v11h9v3q0 .425.288.713T18 20M9 9V7h6v2zm0 3v-2h6v2zm8-3q-.425 0-.712-.288T16 8t.288-.712T17 7t.713.288T18 8t-.288.713T17 9m0 3q-.425 0-.712-.288T16 11t.288-.712T17 10t.713.288T18 11t-.288.713T17 12"/></svg>
