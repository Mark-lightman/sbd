{% stylesheet %}
  .process-steps {
    --process-steps-golden: #C8A873;
    --process-steps-line-default: rgba(248, 249, 244, 0.35);
    --process-steps-line-hover: #C8A873;
    --process-steps-text: #ffffff;
    --process-steps-text-muted: rgba(248, 249, 244, 0.8);
    --process-steps-number: rgba(80, 90, 110, 0.5);
    position: relative;
    overflow: hidden;
  }

  @media screen and (max-width: 749px) {
    .process-steps {
      min-height: 100vh;
      min-height: 100dvh;
    }
  }


  .process-steps::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: radial-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 24px 24px;
    pointer-events: none;
    z-index: 0;
  }

  .process-steps__inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    padding: 100px var(--page-margin, 2rem);
    max-width: var(--page-width, 120rem);
    margin: 0 auto;
  }

  .process-steps__header {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  @media screen and (min-width: 750px) {
    .process-steps__header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
      gap: 2rem;
    }
  }

  .process-steps__header-content {
    flex: 1;
    width: 100%;
  }

  .process-steps__header-content .group-block {
    width: 100%;
    min-width: 0;
  }

  .process-steps__header-content .group-block-content {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    align-items: flex-end;
    text-align: left;
    width: 100%;
    gap: 1rem 2rem;
  }

  .process-steps__header-content .group-block-content > *:nth-child(1),
  .process-steps__header-content .group-block-content > *:nth-child(2) {
    width: 100%;
  }

  .process-steps__header-content .group-block-content > *:nth-child(3) {
    max-width: 42ch;
    align-self: flex-end;
    text-align: left;
  }

  .process-steps__header-content .group-block-content > *:nth-child(3) * {
    text-align: left;
  }

  .process-steps__header-content .group-block-content > *:first-child,
  .process-steps__header-content .group-block-content > *:first-child * {
    color: var(--process-steps-subheading-color, var(--process-steps-text-muted));
  }

  .process-steps__header-content .group-block-content > *:nth-child(2),
  .process-steps__header-content .group-block-content > *:nth-child(2) * {
    color: var(--process-steps-text);
  }

  .process-steps__header-content .text-block.h2 em,
  .process-steps__header-content .group-block-content > *:nth-child(2) .text-block__highlight,
  .process-steps__header-content .group-block-content > *:nth-child(2) em {
    font-family: inherit;
    font-style: italic;
    font-size: var(--font-h2--size);
    font-weight: inherit;
    line-height: inherit;
    letter-spacing: inherit;
    color: var(--process-steps-golden);
  }

  .process-steps__header-content .group-block-content > *:nth-child(3),
  .process-steps__header-content .group-block-content > *:nth-child(3) * {
    color: var(--process-steps-text-muted);
    opacity: 0.8;
  }

  .process-steps__header-content .group-block-content > a {
    flex-shrink: 0;
    margin-left: auto;
    white-space: nowrap;
  }

  @media screen and (max-width: 749px) {
    .process-steps__header-content .group-block-content > a {
      margin-left: 0;
      align-self: stretch;
      width: 100%;
      text-align: center;
    }
  }

  .process-steps__subheading {
    font-size: var(--font-size--xs);
    font-weight: 500;
    letter-spacing: var(--letter-spacing-md);
    color: var(--process-steps-text-muted);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
  }

  .process-steps__heading {
    font-family: var(--font-heading--family);
    font-size: var(--font-size--h2);
    font-weight: var(--font-h2--weight);
    color: var(--process-steps-text);
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .process-steps__heading-accent {
    font-family: var(--font-accent--family);
    font-style: italic;
    color: var(--process-steps-golden);
  }

  .process-steps__description {
    font-size: var(--font-size--paragraph);
    line-height: 1.6;
    color: var(--process-steps-text-muted);
    margin: 0;
    max-width: 42ch;
  }

  .process-steps__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    flex: 1;
  }

  @media screen and (min-width: 750px) {
    .process-steps__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  .process-steps__card {
    position: relative;
    padding: 2rem;
    background: transparent;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .process-steps__card-number {
    position: absolute;
    top: 1.5rem;
    right: 2rem;
    font-size: 3.5rem;
    font-weight: 300;
    font-family: Georgia, 'Times New Roman', serif;
    color: var(--process-steps-number);
    line-height: 1;
    transition: color 0.5s ease;
  }

  .process-steps__card:hover .process-steps__card-number {
    color: var(--process-steps-golden);
  }

  .process-steps__card-icon {
    width: 4rem;
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #1f2937;
    border-radius: 50%;
    background: #181818;
    flex-shrink: 0;
    position: relative;
    z-index: 10;
    transition: all 0.5s ease;
  }

  .process-steps__card:hover .process-steps__card-icon {
    border-color: var(--process-steps-golden);
    box-shadow: 0 0 30px rgba(200, 168, 115, 0.2);
  }

  .process-steps__card-icon-symbol {
    font-size: 1.5rem;
    color: #9ca3af;
    transition: color 0.5s ease;
  }

  .process-steps__card-icon-svg {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #9ca3af;
    transition: color 0.5s ease;
  }

  .process-steps__card-icon-svg svg {
    width: 2rem; 
    height: 2rem;
  }

  .process-steps__card:hover .process-steps__card-icon-symbol {
    color: var(--process-steps-golden);
  }

  .process-steps__card-title {
    font-family: var(--font-h4--family);
    font-style: var(--font-h4--style);
    font-weight: var(--font-h4--weight);
    font-size: var(--font-h4--size);
    line-height: var(--font-h4--line-height);
    letter-spacing: var(--font-h4--letter-spacing);
    text-transform: var(--font-h4--case);
    color: var(--process-steps-text);
    margin: 0;
    transition: color 0.5s ease;
  }

  .process-steps__card:hover .process-steps__card-title {
    color: var(--process-steps-golden);
  }

  .process-steps__card-description-wrap {
    border-left: 1px solid var(--process-steps-line-default);
    padding-inline-start: 1rem;
    transition: border-color 0.5s ease;
  }

  .process-steps__card:hover .process-steps__card-description-wrap {
    border-left-color: var(--process-steps-golden);
  }

  .process-steps__card-description {
    font-family: var(--font-body--family);
    font-size: var(--font-size--sm);
    line-height: 1.6;
    color: var(--process-steps-text-muted);
    opacity: 0.8;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .process-steps__card {
      transition: transform 0.5s ease, opacity 0.5s ease;
    }

    .process-steps__card--in-view {
      transform: scale(1.02);
      opacity: 1;
    }

    .process-steps__card:not(.process-steps__card--in-view) {
      opacity: 0.85;
    }

    .process-steps__card--in-view .process-steps__card-number {
      color: var(--process-steps-golden);
    }

    .process-steps__card--in-view .process-steps__card-icon {
      border-color: var(--process-steps-golden);
      box-shadow: 0 0 30px rgba(200, 168, 115, 0.2);
    }

    .process-steps__card--in-view .process-steps__card-icon-symbol,
    .process-steps__card--in-view .process-steps__card-icon-svg {
      color: var(--process-steps-golden);
    }

    .process-steps__card--in-view .process-steps__card-title {
      color: var(--process-steps-golden);
    }

    .process-steps__card--in-view .process-steps__card-description-wrap {
      border-left-color: var(--process-steps-golden);
    }
  }
{% endstylesheet %}

<script>
  (function() {
    const section = document.querySelector('[data-testid="process-steps"]');
    if (!section) return;

    const cards = section.querySelectorAll('.process-steps__card');
    if (!cards.length) return;

    const mobileQuery = window.matchMedia('(max-width: 749px)');
    let ticking = false;
    let scrollListener = null;
    let currentHighlight = null;
    const HYSTERESIS = 80;

    function updateHighlight() {
      if (!mobileQuery.matches) return;

      const vv = window.visualViewport || window;
      const viewportHeight = vv.height || window.innerHeight;
      const viewportCenter = (vv.offsetTop || 0) + viewportHeight / 2;
      let closest = null;
      let closestDist = Infinity;

      cards.forEach(card => {
        const rect = card.getBoundingClientRect();
        if (rect.bottom < 0 || rect.top > viewportHeight) return;
        const cardCenter = rect.top + rect.height / 2;
        const dist = Math.abs(cardCenter - viewportCenter);
        if (dist < closestDist) {
          closestDist = dist;
          closest = card;
        }
      });

      const currentDist = currentHighlight
        ? Math.abs(
            currentHighlight.getBoundingClientRect().top +
            currentHighlight.getBoundingClientRect().height / 2 -
            viewportCenter
          )
        : Infinity;
      const shouldSwitch = !currentHighlight || (closest && closestDist < currentDist - HYSTERESIS);

      if (shouldSwitch && closest !== currentHighlight) {
        cards.forEach(card => card.classList.remove('process-steps__card--in-view'));
        if (closest) {
          closest.classList.add('process-steps__card--in-view');
          currentHighlight = closest;
        } else {
          currentHighlight = null;
        }
      }
    }

    function onScroll() {
      if (!ticking) {
        requestAnimationFrame(() => {
          updateHighlight();
          ticking = false;
        });
        ticking = true;
      }
    }

    function setup() {
      if (!mobileQuery.matches) {
        if (scrollListener) {
          window.removeEventListener('scroll', scrollListener, { passive: true });
          if (window.visualViewport) {
            window.visualViewport.removeEventListener('resize', onScroll);
          }
          scrollListener = null;
        }
        cards.forEach(card => card.classList.remove('process-steps__card--in-view'));
        currentHighlight = null;
        return;
      }

      if (scrollListener) return;

      scrollListener = onScroll;
      window.addEventListener('scroll', scrollListener, { passive: true });
      if (window.visualViewport) {
        window.visualViewport.addEventListener('resize', onScroll);
      }
      updateHighlight();
    }

    setup();
    mobileQuery.addEventListener('change', setup);
  })();
</script>

